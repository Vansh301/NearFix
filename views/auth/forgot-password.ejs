<%- include('../partials/header') %>

<main class="container" style="padding: 4rem 0;">
    <div class="auth-form" style="max-width: 450px; margin: 0 auto; background: white; padding: 2.5rem; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.05); border: 1px solid var(--border);">
        <div style="text-align: center; margin-bottom: 2rem;">
            <div style="width: 64px; height: 64px; background: #f0f7ff; color: var(--primary); border-radius: 20px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem; font-size: 1.5rem;">
                <i class="fas fa-key"></i>
            </div>
            <h2 style="font-size: 1.75rem; color: #1e293b; margin-bottom: 0.5rem;">Forgot Password?</h2>
            <p style="color: var(--text-muted); font-size: 0.95rem;">Enter your email address and we'll send you a link to reset your password.</p>
        </div>

        <form action="/auth/forgot-password" method="POST">
            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label for="email" style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: #475569;">Email Address</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="your@email.com" required 
                       style="width: 100%; padding: 0.8rem 1rem; border-radius: 12px; border: 1.5px solid #e2e8f0; outline: none; transition: border-color 0.2s;">
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; padding: 1rem; border-radius: 12px; font-weight: 700; background: var(--primary); border: none; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                Send Reset Link
                <i class="fas fa-arrow-right" style="font-size: 0.8rem;"></i>
            </button>
        </form>

        <div style="text-align: center; margin-top: 2rem; border-top: 1px solid #f1f5f9; padding-top: 1.5rem;">
            <a href="/auth/login" style="color: var(--text-muted); text-decoration: none; font-size: 0.9rem; font-weight: 600;">
                <i class="fas fa-arrow-left" style="margin-right: 0.5rem;"></i> Back to Login
            </a>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
