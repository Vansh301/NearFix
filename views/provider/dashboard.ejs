                    </div>
                </td>
                <td style="padding: 1.5rem 2rem;">
                    <span class="badge" style="background: #eff6ff; color: #1d4ed8;">${data.serviceCategory}</span>
                </td>
                <td style="padding: 1.5rem 2rem;">
                    <span style="display: block; font-weight: 500;">${dateStr}</span>
                    <span style="display: block; font-size: 0.8rem; color: var(--text-muted);">${data.bookingTime}</span>
                </td>
                <td style="padding: 1.5rem 2rem;">
                    <span id="status-badge-${data.bookingId}" class="badge status-pending">PENDING</span>
                </td>
                <td style="padding: 1.5rem 2rem;">
                    <div style="text-align: center; color: var(--text-muted); font-size: 0.75rem;">Refresh to manage</div>
                </td>
            `;
            tbody.prepend(row);
        }

        function updateBookingStatus(bookingId, status) {
            const badge = document.getElementById('status-badge-' + bookingId);
            if (badge) {
                badge.className = 'badge status-' + status;
                badge.innerText = status.toUpperCase();
            }
        }

        socket.on('notification', (data) => {
            console.log('Dashboard received notification:', data);
            addActivity(data);
        });

        socket.on('paymentUpdate', (data) => {
            addActivity({
                title: 'Payment Received! ðŸ’°',
                content: 'Success! A client has confirmed payment for one of your bookings.',
                type: 'booking'
            });
            setTimeout(() => window.location.reload(), 3000);
        });
    }
</script>

