                        </div>
                        <p style="margin: 0; font-size: 0.8rem; color: #64748b; line-height: 1.4;">${data.content}</p>
                    </div>
                </div>
            `;
            feed.prepend(card);
            
            // Keep only last 10
            if (feed.children.length > 11) feed.lastElementChild.remove();
        }

        function updateStats(action) {
            const totalEl = document.getElementById('stat-total');
            const pendingEl = document.getElementById('stat-pending');
            if (action === 'new-booking') {
                totalEl.innerText = parseInt(totalEl.innerText) + 1;
                pendingEl.innerText = parseInt(pendingEl.innerText) + 1;
            } else if (action === 'cancel') {
                pendingEl.innerText = Math.max(0, parseInt(pendingEl.innerText) - 1);
            }
