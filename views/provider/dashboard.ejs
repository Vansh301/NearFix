<!-- Quote Modal -->
<div id="quoteModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); backdrop-filter: blur(4px); align-items: center; justify-content: center; z-index: 2000;">
    <div style="background: white; padding: 2.5rem; border-radius: 24px; width: 90%; max-width: 400px; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);">
        <h3 style="margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
            <i class="fas fa-tag" style="color: var(--primary);"></i>
            Send Price Quote
        </h3>
        <form id="quoteForm" method="POST">
            <div style="margin-bottom: 2rem;">
                <label style="display: block; font-size: 0.85rem; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-muted);">Proposed Price (â‚¹)</label>
                <input type="number" name="amount" required style="width: 100%; padding: 0.75rem; border-radius: 12px; border: 1.5px solid #e2e8f0; outline: none; font-size: 1.25rem; font-weight: 700; color: var(--primary);" placeholder="0.00">
            </div>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                <button type="button" onclick="closeQuoteModal()" class="btn btn-outline" style="width: 100%; justify-content: center;">Cancel</button>
                <button type="submit" class="btn btn-primary" style="width: 100%; justify-content: center;">Send Price</button>
            </div>
        </form>
    </div>
</div>

<script>
    // Global function to open quote modal
    window.openQuoteModal = function(bookingId) {
        const modal = document.getElementById('quoteModal');
        const form = document.getElementById('quoteForm');
        form.action = `/provider/booking/${bookingId}/quote`;
        modal.style.display = 'flex';
    };

    window.closeQuoteModal = function() {
        document.getElementById('quoteModal').style.display = 'none';
    };

    // Global function for marketplace leads
    window.handleBookLeadClick = function(btn) {
        console.log('Book Now Clicked');
        const customerId = btn.getAttribute('data-customer-id');
        const category = btn.getAttribute('data-category');
        const leadId = btn.getAttribute('data-lead-id');
        window.openBookLeadModal(customerId, category, leadId);
    };

    window.openBookLeadModal = function(customerId, category, leadId) {
        console.log('DEBUG: Opening Modal for', {customerId, category, leadId});
        try {
            document.getElementById('modalCustomerId').value = customerId;
            document.getElementById('modalCategory').value = category;
            document.getElementById('modalLeadId').value = leadId;
            document.getElementById('bookLeadModal').style.display = 'flex';
        } catch (err) {
            console.error('DEBUG: Modal Open Error', err);
        }
    };

    window.closeBookLeadModal = function() {
        document.getElementById('bookLeadModal').style.display = 'none';
    };
</script>

