<%- include('../partials/header') %>

<main class="container">
    <div class="auth-form" style="max-width: 600px;">
        <h2 style="text-align: center; margin-bottom: 0.5rem; font-size: 2rem;">Setup Your Profile</h2>
        <p style="text-align: center; color: var(--text-muted); margin-bottom: 2.5rem;">Tell customers why you're the best person for the job.</p>

        <form action="/provider/setup" method="POST">
            <div class="form-group">
                <label for="category">Main Service Category</label>
                <select id="category" name="category" class="form-control" required>
                    <option value="Electrician">Electrician</option>
                    <option value="Plumber">Plumber</option>
                    <option value="Cleaner">Home Cleaner</option>
                    <option value="Tutor">Academic Tutor</option>
                    <option value="Mechanic">Mechanic</option>
                    <option value="Gardener">Gardener</option>
                </select>
            </div>

            <div class="form-group">
                <label for="city">City / Operating Area</label>
                <input type="text" id="city" name="city" class="form-control" placeholder="e.g. Delhi, Mumbai" required>
            </div>

            <div class="form-group">
                <label for="priceRange">Estimated Price Range</label>
                <select id="priceRange" name="priceRange" class="form-control" required>
                    <option value="₹200 - ₹500">₹200 - ₹500 (Basic)</option>
                    <option value="₹500 - ₹1000">₹500 - ₹1000 (Standard)</option>
                    <option value="₹1000 - ₹2000">₹1000 - ₹2000 (Premium)</option>
                    <option value="₹2000+">₹2000+ (High-End)</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="experience">Years of Experience</label>
                <input type="number" id="experience" name="experience" class="form-control" placeholder="e.g. 5" min="0" required>
            </div>

            <div class="form-group">
                <label for="bio">Professional Bio</label>
                <textarea id="bio" name="bio" class="form-control" rows="5" placeholder="Describe your skills, tools, and work ethic..." required></textarea>
            </div>

            <div style="background: #f1f5f9; padding: 1.5rem; border-radius: 12px; margin-bottom: 2rem;">
                <p style="font-size: 0.9rem; color: #475569;"><i class="fas fa-info-circle"></i> After setup, our admin team will review your profile for verification. Verified workers get 3x more bookings!</p>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; justify-content: center;">
                Finish Setup
            </button>
        </form>
    </div>
</main>

<%- include('../partials/footer') %>
