<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NearFix | Local Services Marketplace</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <nav class="navbar">
        <div class="container nav-content">
            <a href="/" class="logo">
                <i class="fas fa-bolt"></i> Near<span>Fix</span>
            </a>
            
            <div class="nav-links">
                <a href="/search" class="nav-link">Find Services</a>
                <% if (!currentUser) { %>
                    <a href="/auth/login" class="nav-link">Login</a>
                    <a href="/auth/register" class="btn btn-primary">Join Now</a>
                <% } else { %>
                    <% if (currentUser.role === 'customer') { %>
                        <a href="/user/bookings" class="nav-link">My Bookings</a>
                    <% } else if (currentUser.role === 'provider') { %>
                        <a href="/provider/dashboard" class="nav-link">Dashboard</a>
                    <% } else if (currentUser.role === 'admin') { %>
                        <a href="/admin/dashboard" class="nav-link">Admin</a>
                    <% } %>
                    <a href="/chat" class="nav-link" style="position: relative;">
                        <i class="fas fa-comment"></i> Messages
                        <% if (locals.unreadCount > 0) { %>
                            <span id="global-unread-count" class="notif-badge">
                                <%= unreadCount %>
                            </span>
                        <% } %>
                    </a>
                    <div class="user-menu" style="display: flex; align-items: center; gap: 1rem;">
                        <span style="font-weight: 600;"><%= currentUser.fullName.split(' ')[0] %></span>
                        <a href="/auth/logout" class="btn btn-outline" style="padding: 0.5rem 1rem;">Logout</a>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>

    <% if (success && success.length > 0) { %>
        <div class="container" style="margin-top: 1rem;">
            <div class="badge badge-success" style="width: 100%; padding: 1rem; border-radius: 8px;">
                <%= success %>
            </div>
        </div>
    <% } %>

    <% if (error && error.length > 0) { %>
        <div class="container" style="margin-top: 1rem;">
            <div class="badge badge-error" style="width: 100%; padding: 1rem; border-radius: 8px; background: #fee2e2; color: #991b1b;">
                <%= error %>
            </div>
        </div>
    <% } %>

    <script>
        <% if (locals.currentUser) { %>
            window.currentUserId = '<%= currentUser._id %>';
        <% } %>
    </script>
    <script src="/js/main.js"></script>
